<h1>
  List of all directors
</h1>

<form action="/insert_director" method="post">
<div>
<label for="director_name">Name</label>
<input id="director_name" type="text" name="new_name">
</div>

<div>
<label for="dob">Dob</label>
<input id="dob" type="date" name="dob_entry">
</div>

<div>
<label for="bio">Bio</label>
<input id="bio" type="text" name="bio_entry">
</div>

<div>
<label for="image">Image</label>
<input id="image" type="text" name="image_upload">
</div>

<button>Create director</button>
</form>
<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
